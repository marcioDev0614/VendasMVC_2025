@model IEnumerable<VendasMVC.Models.Departamento>

@{
    ViewData["Title"] = "Lista de departamentos";
}

<h1>@ViewData["Title"]</h1>
<hr />

<p>
    <a asp-action="Create" class="btn btn-primary">Adicionar novo</a>
</p>

<br />

<table class="table table-striped table-hover" id="table-departamentos">

    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nome</th>
            <th scope="col">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
            @foreach (Departamento department in Model)
            {
        <tr>

            <td scope="row">@department.Id</td>
            <td scope="row">@department.Nome</td>
            <td>
                <a asp-action="Edit" asp-route-id="@department.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Datails" asp-route-id="@department.Id" class="btn btn-dark">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@department.Id" class="btn btn-danger">Deletar</a>
            </td>
        </tr>

            }
    </tbody>
</table>

